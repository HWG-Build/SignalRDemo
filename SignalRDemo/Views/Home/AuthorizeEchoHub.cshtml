@{
    ViewBag.Title = "SignalR Hub";
}
<hgroup>
    <h2>AuthorizeEchoHub</h2>
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>
</hgroup>
<div>
    <ul id="Messages"></ul>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/signalr")
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Common.js"></script>
    <script src="~/Scripts/AuthorizeEchoHub.js"></script>
    <script>
        $(function () {
            startSignalR();
        });
    </script>
}